{
	"name": "will-it-rain",
	"version": "0.0.1",
	"description": "A node js app to notify you if it will rain in the next 3 hours.",
	"main": "src/index.js",
	"scripts": {
		"lint": "xo",
		"dev": "nodemon ./src/index.js",
		"test": "jest"
	},
	"license": "MIT",
	"author": "Thanos Di <thanosdi@live.com>",
	"dependencies": {
		"capitalize": "^2.0.3",
		"date-fns": "^2.12.0",
		"node-fetch": "^2.6.1",
		"nodemailer": "^6.4.6",
		"ramda": "^0.27.0"
	},
	"devDependencies": {
		"@types/jest": "^25.2.1",
		"@types/ramda": "^0.27.4",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"lint-staged": "^10.2.2",
		"nodemon": "^2.0.3",
		"xo": "^0.30.0"
	},
	"lint-staged": {
		"*": [
			"xo --fix",
			"git add"
		]
	},
	"nodemonConfig": {
		"ignore": [
			"*.json"
		]
	},
	"xo": {
		"prettier": true,
		"envs": [
			"jest",
			"node",
			"browser"
		],
		"rules": {
			"camelcase": 1
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn test"
		}
	},
	"jest": {
		"modulePathIgnorePatterns": [
			"/node_modules/",
			"/fixtures/"
		]
	}
}
